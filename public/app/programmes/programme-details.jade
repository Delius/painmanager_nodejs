.container
    h1 {{programme.title}}
    .row
        .col-md-6
            h3(ng-show="programme.featured") Featured
            h3 Published on {{programme.published | date }}
        .col-md-6
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in programme.tags") {{tag}}
